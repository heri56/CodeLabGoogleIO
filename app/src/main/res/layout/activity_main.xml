<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heri.codelabgoogleio.activity.MainActivity"
    android:background="@color/colorbackground">

    <ListView
        android:id="@+id/ListView"
        android:layout_width="368dp"
        android:layout_height="495dp" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apptext"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colortext"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/Text1"/>
    <Button
        android:id="@+id/ButtonTenggah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text1"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:text="Button"/>
    <Button
        android:id="@+id/ButtonKanan"
        android:text="Button Kanan"

        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        android:layout_toLeftOf="@+id/ButtonTenggah"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ButtonTenggah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonKiri"
        android:text="Button Kiri"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/ButtonTenggah"/>

</RelativeLayout>
